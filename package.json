{
  "name": "mapicgc-gl-js",
  "homepage": "https://autogitlab.icgc.local/geostarters/icgc/mapicgc/mapicgc-gl-js",
  "version": "0.0.17",
  "description": "mapicgc-gl-js",
  "author": "ICGC",
  "main": "dist/mapicgc.js",

  "module": "dist/mapicgc.js",
  "exports": {
    ".": {
      "import": "./dist/mapicgc-gl.js",
      "require": "./dist/mapicgc-gl.js"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://autogitlab.icgc.local/geostarters/icgc/mapicgc/mapicgc-gl-js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "build-all": "npm-run-all build-web",
    "build-dev": "browserify src/index.js --debug --ignore-transform unassertify --standalone mapicgcgl > dist/mapicgcgl.js",
    "watch-dev": "watchify src/index.js --debug --ignore-transform unassertify --standalone mapicgcgl --outfile dist/mapicgcgl-dev.js --verbose",
    "build-min": "browserify src/index.js --debug --standalone mapicgcgl | terser --compress --mangle > dist/mapicgc-gl.js &&  node nodeDeploy.js",
    "build-web": "run-s build-min",
    "build-docs": "documentation build --github --format md --config ./docs/documentation.yml --output api.md src/index.js",
    "lint": "eslint --fix --cache --ignore-path .gitignore src test",
    "lint-docs": "documentation lint src/index.js",
    "clean": "run-s clean:dist",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepush": "npm-run-all lint test:unit",
    "precommit": "npm-run-all lint"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/preset-env": "^7.23.8",
    "@geostarters/eslint-config": "^0.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "^29.7.0",
    "babelify": "10.0.0",
    "brfs": "^2.0.2",
    "browserify": "^17.0.0",
    "bubleify": "^2.0.0",
    "cross-env": "^7.0.3",
    "derequire": "^2.1.1",
    "documentation": "^14.0.2",
    "dotenv": "^16.3.1",
    "envify": "^4.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "execcommand-copy": "^1.3.0",
    "glob": "^10.3.10",
    "husky": "^9.0.2",
    "in-publish": "^2.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "jsdom": "^24.0.0",
    "minifyify": "^7.3.5",
    "npm-run-all": "^4.1.5",
    "package-json-versionify": "^1.0.4",
    "ssh2-sftp-client": "^9.0.4",
    "terser": "^5.27.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "unassertify": "^3.0.1",
    "unflowify": "^1.0.1",
    "watchify": "^4.0.0"
  },
  "browserify": {
    "transform": [
      "unflowify",
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ],
      [
        "bubleify",
        {
          "bubleError": true,
          "transforms": {
            "dangerousForOf": true
          },
          "objectAssign": "Object.assign"
        }
      ],
      "package-json-versionify",
      "unassertify",
      "brfs"
    ]
  },
  "dependencies": {
    "@maplibre/maplibre-gl-compare": "^0.5.0",
    "flatgeobuf": "^3.27.2",
    "maplibre-gl": "^3.6.2"
  }
}

